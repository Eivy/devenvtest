# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: ID!
  name: String!
}

type Item {
  id: ID!
  name: String!
  location: String
  manager: User!
}

type Query {
  users: [User!]!
  user(id: ID!): User!
  items: [Item!]!
  item(id: ID!): Item!
}

input NewUser {
  name: String!
}

input NewItem {
  name: String!
  location: String!
  manager: ID!
}

type Mutation {
  createUser(input: NewUser!): User!
  createItem(input: NewItem!): Item!
}
