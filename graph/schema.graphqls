# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: Int!
  name: String!
}

type Item {
  id: Int!
  name: String!
  location: String
  manager: User!
}

type Query {
  users: [User!]!
  user(id: Int!): User!
  items: [Item!]!
  item(id: Int!): Item!
}

input NewUser {
  name: String!
}

input NewItem {
  name: String!
  location: String!
  manager: Int!
}

type Mutation {
  createUser(input: NewUser!): User!
  createItem(input: NewItem!): Item!
}
